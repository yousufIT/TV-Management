@model IList<TVShow>
@{
    ViewData["Title"] = "TV Show";
}
@foreach(var item in Model)
{
     <div class="col mb-5">
                <div class="card h-100">
                <!-- Product image-->
                <img class="card-img-top" src="~/img/TV_Show/@(item.Id).jpg" alt="..." />
                <!-- Product details-->
                <div class="card-body p-4">
                <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">@item.Title</h5>
                <!-- Product price-->
                @item.Rating
                </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                <div class="text-center">
                    <a class="btn btn-outline-dark mt-auto" href="@Url.Action("Details", "TVShows", new { id = item.Id ,slug=item.Title.Replace(" ","-").ToLower()})">View details</a>
                </div>
            </div>
                </div>
                </div>
}