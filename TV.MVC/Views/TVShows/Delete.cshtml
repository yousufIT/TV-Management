@model TV.Domain.Models.TVShow

@{
    ViewData["Title"] = "Delete TV Show";
}

<h1>Delete TV Show</h1>

<h3>Are you sure you want to delete this TV Show?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate</dd>
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
        <dt class="col-sm-2">URL</dt>
        <dd class="col-sm-10">@Model.URL</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
