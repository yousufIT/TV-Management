@model TV.Domain.Models.Language

@{
    ViewData["Title"] = "Add Language to TV Show";
    var tvShowId = ViewData["TVShowId"];
}

<h2>Add Language to TV Show</h2>

<form asp-action="CreateForTVShow" method="post">
    <input type="hidden" name="tvShowId" value="@tvShowId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Add Language" class="btn btn-primary" />
    </div>
</form>

